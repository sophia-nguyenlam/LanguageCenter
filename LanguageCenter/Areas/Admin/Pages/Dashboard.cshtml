@page
@model LanguageCenter.Areas.Admin.Pages.DashboardModel
@{
    Layout = "./Shared/_Layout.cshtml";
    ViewData["Title"] = "Admin Dashboard";
}

<h1 class="mb-4"><i class="bi bi-speedometer2 me-2"></i> Dashboard</h1>

<!-- Summary Cards -->
@await Html.PartialAsync("_DashboardSummaryCards", Model)

<!-- Monthly Registrations Chart -->
<section class="my-5">
    @await Html.PartialAsync("_MonthlyRegistrationsChart", Model)
</section>

<!-- Recent Users Table -->
<section class="my-5">
    @await Html.PartialAsync("_RecentUsersTable", Model.RecentUsers)
</section>
