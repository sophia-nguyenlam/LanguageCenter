@page "{id?}"
@model LanguageCenter.Areas.Admin.Pages.ClassSessions.EditModel
@{
    ViewData["Title"] = "Edit Class Session";
    Layout = "../Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="bi bi-pencil-square fs-3 me-2"></i>
                    <h2 class="mb-0">Edit Class Session</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="ClassSession.CourseId" class="form-label">Course</label>
                            <select asp-for="ClassSession.CourseId" class="form-select" asp-items="Model.CourseList"></select>
                            <span asp-validation-for="ClassSession.CourseId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ClassSession.TeacherId" class="form-label">Teacher</label>
                            <select asp-for="ClassSession.TeacherId" class="form-select" asp-items="Model.TeacherList"></select>
                            <span asp-validation-for="ClassSession.TeacherId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ClassSession.StartTime" class="form-label">Start Time</label>
                            <input asp-for="ClassSession.StartTime" class="form-control" type="datetime-local" />
                            <span asp-validation-for="ClassSession.StartTime" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ClassSession.EndTime" class="form-label">End Time</label>
                            <input asp-for="ClassSession.EndTime" class="form-control" type="datetime-local" />
                            <span asp-validation-for="ClassSession.EndTime" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ClassSession.Location" class="form-label">Location</label>
                            <input asp-for="ClassSession.Location" class="form-control" />
                            <span asp-validation-for="ClassSession.Location" class="text-danger"></span>
                        </div>

                        <div class="text-end mt-4">
                            <a asp-page="Details" asp-route-id="@Model.ClassSession.Id" class="btn btn-outline-secondary me-2">
                                <i class="bi bi-arrow-left-circle me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save me-1"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
