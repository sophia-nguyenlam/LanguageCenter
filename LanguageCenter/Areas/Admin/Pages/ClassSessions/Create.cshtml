@page
@model LanguageCenter.Areas.Admin.Pages.ClassSessions.CreateModel
@{
    ViewData["Title"] = "Create Class Session";
    Layout = "../Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="bi bi-calendar-plus-fill fs-3 me-2"></i>
                    <h2 class="mb-0">Create Class Session</h2>
                </div>
                <div class="card-body">
                    <form method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="ClassSession.CourseId" class="form-label fw-semibold">
                                <i class="bi bi-journal-bookmark-fill me-1"></i> Course
                            </label>
                            <select asp-for="ClassSession.CourseId" class="form-select" asp-items="Model.CourseList">
                                <option value="">-- Select Course --</option>
                            </select>
                            <span asp-validation-for="ClassSession.CourseId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ClassSession.TeacherId" class="form-label fw-semibold">
                                <i class="bi bi-person-badge-fill me-1"></i> Teacher
                            </label>
                            <select asp-for="ClassSession.TeacherId" class="form-select" asp-items="Model.TeacherList">
                                <option value="">-- Select Teacher --</option>
                            </select>
                            <span asp-validation-for="ClassSession.TeacherId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ClassSession.StartTime" class="form-label fw-semibold">
                                <i class="bi bi-clock-fill me-1"></i> Start Time
                            </label>
                            <input asp-for="ClassSession.StartTime" type="datetime-local" class="form-control" />
                            <span asp-validation-for="ClassSession.StartTime" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ClassSession.EndTime" class="form-label fw-semibold">
                                <i class="bi bi-clock me-1"></i> End Time
                            </label>
                            <input asp-for="ClassSession.EndTime" type="datetime-local" class="form-control" />
                            <span asp-validation-for="ClassSession.EndTime" class="text-danger"></span>
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-success me-2">
                                <i class="bi bi-check-lg me-1"></i> Create
                            </button>
                            <a asp-page="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
