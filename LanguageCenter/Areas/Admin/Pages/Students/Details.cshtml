@page
@model LanguageCenter.Areas.Admin.Pages.Students.DetailsModel
@{
    ViewData["Title"] = "Student Profile Details";
    Layout = "../Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="bi bi-person-lines-fill fs-3 me-2"></i>
                    <h2 class="mb-0">Student Profile Details</h2>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 fw-semibold">Full Name:</dt>
                        <dd class="col-sm-8">@Model.StudentProfile?.User.FullName</dd>

                        <dt class="col-sm-4 fw-semibold">Email:</dt>
                        <dd class="col-sm-8">@Model.StudentProfile?.User.Email</dd>

                        <dt class="col-sm-4 fw-semibold">Enrollment Date:</dt>
                        <dd class="col-sm-8">
                            @Model.StudentProfile?.EnrollmentDate.ToString("dd MMM yyyy")
                        </dd>

                        <dt class="col-sm-4 fw-semibold">Parent Contact:</dt>
                        <dd class="col-sm-8">
                            @if (string.IsNullOrWhiteSpace(Model.StudentProfile?.ParentContact))
                            {
                                    <span class="text-muted">Not provided</span>
                            }
                            else
                            {
                                @Model.StudentProfile.ParentContact
                            }
                        </dd>

                        <dt class="col-sm-4 fw-semibold">Account Created Date:</dt>
                        <dd class="col-sm-8">
                            @Model.StudentProfile?.User.CreatedDate.ToLocalTime().ToString("dd MMM yyyy HH:mm")
                        </dd>

                        <dt class="col-sm-4 fw-semibold">Status:</dt>
                        <dd class="col-sm-8">
                            @if (Model.StudentProfile?.User.IsActive == true)
                            {
                                    <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                    <span class="badge bg-secondary">Inactive</span>
                            }
                        </dd>
                    </dl>

                    <div class="text-end mt-4">
                        <a asp-page="Index" class="btn btn-outline-primary me-2">
                            <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                        </a>
                        <a asp-page="Edit" asp-route-id="@Model.StudentProfile?.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-square me-1"></i> Edit
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
