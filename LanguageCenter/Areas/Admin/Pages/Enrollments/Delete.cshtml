@page "{id:int}"
@model LanguageCenter.Areas.Admin.Pages.Enrollments.DeleteModel
@{
    ViewData["Title"] = "Delete Enrollment";
    Layout = "~/Areas/Admin/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4">
    <h1 class="h3 text-danger mb-4">Confirm Delete</h1>

    <div class="alert alert-warning">
        Are you sure you want to delete this enrollment?
    </div>

    <div class="card border-0 shadow">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Student</dt>
                <dd class="col-sm-9">@Model.Enrollment.Student.FullName</dd>

                <dt class="col-sm-3">Course</dt>
                <dd class="col-sm-9">@Model.Enrollment.Course.Name</dd>

                <dt class="col-sm-3">Enroll Date</dt>
                <dd class="col-sm-9">@Model.Enrollment.EnrollDate.ToString("dd MMM yyyy")</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.Enrollment.Status</dd>
            </dl>
        </div>
    </div>

    <form method="post" class="mt-3">
        <input type="hidden" asp-for="Enrollment.Id" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
