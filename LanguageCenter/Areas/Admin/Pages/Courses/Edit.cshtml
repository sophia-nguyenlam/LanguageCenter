@page "{id:int}"
@model LanguageCenter.Areas.Admin.Pages.Courses.EditModel
@{
    ViewData["Title"] = "Edit Course";
    Layout = "../Shared/_Layout.cshtml";
}

<div class="d-flex">
    <main class="flex-grow-1 p-4">
        <h2 class="mb-4"><i class="bi bi-pencil-square me-2"></i> Edit Course</h2>

        <form method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="Input.Id" />

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Input.Name" class="form-label"></label>
                    <input asp-for="Input.Name" class="form-control" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Input.DurationInWeeks" class="form-label"></label>
                    <input asp-for="Input.DurationInWeeks" type="number" min="1" class="form-control" />
                    <span asp-validation-for="Input.DurationInWeeks" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Input.TuitionFee" class="form-label"></label>
                    <input asp-for="Input.TuitionFee" type="number" step="0.01" min="0" class="form-control" />
                    <span asp-validation-for="Input.TuitionFee" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Input.Level" class="form-label"></label>
                    <select asp-for="Input.Level" class="form-select">
                        <option value="">Select level</option>
                        <option>Beginner</option>
                        <option>Intermediate</option>
                        <option>Advanced</option>
                    </select>
                    <span asp-validation-for="Input.Level" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Input.Language" class="form-label"></label>
                    <input asp-for="Input.Language" class="form-control" />
                    <span asp-validation-for="Input.Language" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Input.Description" class="form-label"></label>
                    <textarea asp-for="Input.Description" rows="4" class="form-control"></textarea>
                    <span asp-validation-for="Input.Description" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle me-1"></i> Save Changes
                </button>
                <a asp-page="./Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-arrow-left-circle me-1"></i> Cancel
                </a>
            </div>
        </form>
    </main>
</div>
